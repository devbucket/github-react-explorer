{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Other */
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/env": [
        "./env"
      ],
      "@/api": [
        "./api"
      ],
    },
    "types": [
      "vite/client",
      "vitest",
      "vitest/globals",
      "vitest/importMeta",
      "@testing-library/jest-dom"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
